<%- include('../partials/headerHome') %>
<%- include('../partials/navbar') %>

<body class="roboto-regular">

    <%- include('../partials/headerHome') %>
  
    <div class="container">
      <h1 class="mb-4"><%= farmBed.bed.name %> Bed Details</h1>
      
      <ul class="bed-details">
        <li><span>Bed name:</span> <%= farmBed.bed.name %></li>
        <li><span>Bed Description:</span> <%= farmBed.bed.description %></li>
        <li><span>Bed size X:</span> <%= farmBed.bed.size.x %></li>
        <li><span>Bed size Y:</span> <%= farmBed.bed.size.y %></li>
        <li><span>Bed horizontal position:</span> <%= farmBed.bed.pos.hor %></li>
        <li><span>Bed vertical position:</span> <%= farmBed.bed.pos.ver %></li>
        <li><span>Image URL:</span> <%= farmBed.bed.imageUrl %></li>
        <li><span>Image color:</span> <%= farmBed.bed.colorCode %></li>
      </ul>
  
      <div class="actions my-4">
        <a href="/beds/<%= farmBed._id %>/update" class="btn btn-primary">Update Bed</a>
        <a href="/beds" class="btn btn-secondary">All Beds</a>
        <form action="/beds/<%= farmBed._id %>?_method=DELETE" method="POST" class="d-inline">
          <button class="btn btn-danger">Delete Bed</button>
        </form>
      </div>
  
      <div class="actions mb-4">
        <a href="/<%= farmBed._id %>/product/create" class="btn btn-success">Create Product</a>
        <a href="/<%= farmBed._id %>/products" class="btn btn-info">All Products</a>
      </div>
  
      <!-- Uncomment and style this section when you want to list products
      <ul class="list-group">
        <% for(product of products) { %>
          <li class="list-group-item">
            <a href="#"><%= product.name %></a>
          </li>
        <% } %>
      </ul>
      -->
    </div>
    <body class="roboto-regular">
      <div class="container">
          <h1 class="mb-4"><%= farmBed.bed.name %> Bed Products</h1>
          <!-- Grid with Images -->
          <div class="container-fluid text-center">
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 color roboto-bold">
              <% for (let product of products) { %>
                <% if (product.imageUrl && product.imageUrl !== '') { %>
                  <div class="col grid-item" style="background-image: url('<%= product.imageUrl %>');">
                    <a id="productAncor" href="/products/<%= product._id %>" class="text"><%= product.name %></a>
                  </div>
                <% } else if (product.colorCode && product.colorCode !== '') { %>
                  <div class="col grid-item" style="background-color: <%= product.colorCode %>;">
                    <a id="productAncor" href="/products/<%= product._id %>" class="text"><%= product.name %></a>
                  </div>
                <% } else { %>
                  <div class="col grid-item bg-success">
                    <a id="productAncor" href="/products/<%= product._id %>" class="text"><%= product.name %></a>
                  </div>
                <% } %>
              <% } %>
              <div class="col grid-item bg-success">
                <a id="productAncor" href="/<%= farmBed._id %>/product/create" class="text">Create Product</a>
              </div>
            </div>
          </div>
      
        </div>
      
    <%- include('../partials/footer') %>
